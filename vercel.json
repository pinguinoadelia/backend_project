{
    "version": 2,
    "builds": [
      {
        "src": "backend_project/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "50mb" }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "headers": { "cache-control": "public, max-age=31536000, immutable" },
        "dest": "/static/$1"
      },
      {
        "src": "/(media/.*)",
        "dest": "/$1"
      },
      {
        "src": "/(.*)",
        "dest": "backend_project/wsgi.py"
      }
    ]
  }
  